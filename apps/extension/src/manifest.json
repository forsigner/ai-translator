{
  "manifest_version": 3,
  "name": "AI Translator",
  "version": "0.0.1",
  "description": "Translator by AI",
  "background": {
    "service_worker": "js/background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-34.png"
  },
  "icons": {
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "js/content.bundle.js"
      ],
      "css": []
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "icons/icon-128.png",
        "icons/icon-34.png"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}